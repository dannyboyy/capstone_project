  <%= form_tag companies_path, class: "input-group input-group-lg", :method => :get do %>
    <%= text_field_tag :query, params[:query], class: "form-control", id: "company_search", :'data-provide' => 'typeahead' %>
    <div class="input-group-btn">
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
    <% if params[:query].present? %>
      <div class="input-group-btn" id="clear">
        <%= link_to "clear", companies_path, class: "btn btn-default" %>
      </div>
    <% end %>
  <% end %>

  <% @companies.each do |company| %>
    <div class="link row clearfix">
      <h2>
        <%= link_to company.name, company %><br>
        <small class="author">Submitted <%= time_ago_in_words(company.created_at) %> by <%= company.user.email %></small>
      </h2>
    </div>
  <% end %>