<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @company.description %>
</p>

<% if policy(@company).edit? %>
  <%= link_to 'Edit', edit_company_path(@company) %> |
<% end %>

<%= link_to 'Back', companies_path %>

<% if policy(@company).destroy? %>
  <%= link_to 'Delete', @company, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this company?'} %>
<% end %>

