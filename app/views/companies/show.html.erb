<div class="page-header">
  <h1><%= @company.name %></a><br> <small>Submitted by <%= @company.user.email %></small></h1>
  <h2><%= @company.description %></h2>
</div>

<% if @company.user == current_user -%>
  <div class="btn-group">
    <%= link_to 'Edit', edit_company_path(@company), class: "btn btn-default" %>
    <%= link_to 'Destroy', @company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
  </div>
<% end %>

<div class="btn-group pull-right">
  <%= link_to like_company_path(@company), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-up"></span>
    Upvote
    <%= @company.get_upvotes.size %>
  <% end %>
  <%= link_to dislike_company_path(@company), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-down">
    Downvote
    <%= @company.get_downvotes.size %>
  <% end %>
</div>

